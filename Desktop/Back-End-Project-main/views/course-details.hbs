 
 <div class="container">
        <h1 class="my-4">Course title : {{video.title}}</h1>

        <div class="row">
            
            <div class="col-md-8">
                <img class="img-fluid"
                    src="{{video.imageUrl}}"
                    alt="Express" />
            </div>
            {{#if user}}
            <div class="col-md-4 text-center">
                <h3 class="my-3">{{video.description}}</h3>
                <p>{{video.createdAt}}</p>
                {{#if isCreator}}
                <form method="POST" action="/delete/{{video._id}}" enctype="application/x-www-form-urlencoded">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">Delete Video</button>
                </form>
                <a class="btn btn-warning" href="/edit/{{video._id}}">Edit</a>
                {{/if}}
               {{#if isEnrolled}}
                <span class="enrolled-span">You Are Enrolled</span>
                <a class="btn btn-warning" href="/home">Back</a>
                {{else}}
                <a class="enrolled-span" href="/enroll/{{video._id}}">Enroll Now</a>
                 <a class="btn btn-warning" href="/home">Back</a>
                {{/if}}              
            </div>

                {{else}}
                 <div class="col-md-4 text-center">
                <h3 class="my-3">{{video.description}}</h3>
                <p>{{video.createdAt}}</p>
               
                <a class="btn btn-primary" href="/">Enroll</a>
            </div>
                {{/if}}
        </div>
    </div>
       